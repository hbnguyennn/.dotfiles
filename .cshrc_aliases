alias mycshrc  "v ${HOME}/.cshrc.aliases"
alias smycshrc "source ${HOME}/.cshrc.aliases"

alias v   "nvim"
alias vi  "vim"
alias l   "ls -lah"
alias h   "history"
alias c   "clear; pwd"
alias rmf "rm -rvf"

alias vdiff "vimdiff -c 'set diffopt+=iwhite'"
alias _cd 'cd `find . -type d | fzf`'
alias _v  'v  `fzf`'

alias tmux "tmux -2 a -d -t"

alias _nvim_tiny "setenv NVIM_APPNAME nvim_tiny"

